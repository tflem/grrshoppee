<h3>List of Products</h3>

<table role="grid">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do | product | %>
      <tr>
        <td><%= link_to product.name.titleize, product %></td>
        <td><%= product.quantity %></td>
        <td class="edit-button">
          <%= button_to "Edit",
              edit_product_path(product),
              method: :get %>
        </td>
        <td class="delete-button">
          <%= button_to "Delete",
              product_path(product),
              method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<button>
  <%= link_to "Add Products", new_product_path %>
</button>
