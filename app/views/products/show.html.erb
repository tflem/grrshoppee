<h3>Product Details</h3>

<table role="grid">
  <thead>
    <tr>
      <th>ID Number</th>
      <th>Product Name</th>
      <th>Product Quantity</th>
      <th>Time Created</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @product.id %></td>
      <td><%= @product.name %></td>
      <td><%= @product.quantity %></td>
      <td>
        <%= time_ago_in_words @product.created_at %>
        <%= " ago" %>
      </td>
    </tr>
  </tbody>
</table>
