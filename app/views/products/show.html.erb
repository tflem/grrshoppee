<% show_title @product.name, "Products" %>

<h3>Product Details</h3>

<table role="grid">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Add Products</th>
      <th>View Products</th>
      <th>Time Created</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @product.name.capitalize %></td>
      <td><%= @product.quantity %></td>
      <td>
        <button>
          <%= link_to "Add Products", new_product_path %>
        </button>
      </td>
      <td>
        <button>
          <%= link_to "View Products", products_path %>
        </button>
      </td>
      <td>
        <%= time_ago_in_words @product.created_at %>
        <%= " ago" %>
      </td>
    </tr>
  </tbody>
</table>
