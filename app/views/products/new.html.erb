<h3>Add New Product</h3>

<div class="flex-form-parent">
  <%= form_with(model: @product, local: true) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :quantity %>
      <%= form.text_field :quantity %>
    </div>
    <%= form.submit %>
  <% end %>
</div>
